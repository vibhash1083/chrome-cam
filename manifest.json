{
  "manifest_version": 2,
  "name": "Cam Viewer",
  "description": "Web cam viewer",
  "version": "0.1",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
   ]
}
